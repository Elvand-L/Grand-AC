{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    },
    {
      "src": "*.html",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/shop",
      "dest": "/shop.html"
    },
    {
      "src": "/api/logic",
      "dest": "/api/logic.js"
    },
    {
      "src": "/api/main",
      "dest": "/api/main.js"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}